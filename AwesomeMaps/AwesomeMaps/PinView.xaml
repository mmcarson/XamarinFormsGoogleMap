<?xml version="1.0" encoding="UTF-8"?>
<StackLayout
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:AwesomeMaps"
    x:Class="AwesomeMaps.PinView"
    WidthRequest="150" 
    HeightRequest="50"
    AnchorX="0.25"
    AnchorY="0.25"
    >
    <StackLayout
        Orientation="Horizontal"
        VerticalOptions="Fill"
        HorizontalOptions="Fill"
          >
        <local:ImageCircle
            Source="{Binding imgSource}"
            WidthRequest="50"
            HeightRequest="50">

        </local:ImageCircle>
        <Label
            Text="{Binding msgSource}"
            Margin="0,10,0,0"
            WidthRequest="100"
            HeightRequest="50"
            >
            
        </Label>
    </StackLayout>
</StackLayout>
